<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView pour la boussole -->


    <ImageView
        android:id="@+id/compassImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/nord" />

    <TextView
        android:id="@+id/qiblaMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_location_pin_24"
        android:text="Aligning with Qibla..."
        android:textSize="18sp"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"/>

</FrameLayout>
